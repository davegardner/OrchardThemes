@using Orchard.Mvc.Html
@using Orchard.ContentManagement
@using Orchard.Utility.Extensions
@{
    if (Model.Title != null)
    {
        Layout.Title = Model.Title;
    }

    Model.Classes.Add("content-item");

    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
    Model.Classes.Add(contentTypeClassName);

    var tag = Tag(Model, "article");


}


@*---------------------------------------------------------------------------*@

<tr>
    <td class="date">
        @if (Model.ContentItem.DiaryDates.FromDate != null)
        {
            var date = (DateTime)Model.ContentItem.DiaryDates.FromDate.DateTime;
            <text>@date.ToString("dd/MM/yyyy")</text>
        }
    </td>
    <td class="title">
        <a href="@Url.ItemDisplayUrl((ContentItem)Model.ContentItem)">@Model.ContentItem.TitlePart.Title</a>
    </td>
</tr>

